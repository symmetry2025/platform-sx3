# Standalone trainers app (production)
#
# Copy to `.env` on the VPS (do not commit `.env`).

# Postgres (docker compose service name: db)
POSTGRES_DB="symmetry_trainer"
POSTGRES_USER="trainer"
POSTGRES_PASSWORD="CHANGE_ME_STRONG_PASSWORD"

# DB URL for Prisma/Next.js (must match the variables above)
DATABASE_URL="postgresql://trainer:CHANGE_ME_STRONG_PASSWORD@db:5432/symmetry_trainer?schema=public"

# Auth
AUTH_COOKIE_NAME="smmtry_trainer_sess"
AUTH_SESSION_TTL_DAYS="30"

